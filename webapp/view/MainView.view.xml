<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ns.ProjectA.controller.MainView" displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
					    <Table noDataText="Drop column list items here and columns in the area above" id="table0" items="{/A_BusinessPartner}" growing="true">
					        <items>
					            <ColumnListItem type="Active" id="item0">
					                <cells>
					                    <Text text="{BusinessPartner}" id="text2"/>
					                    <Text text="{BusinessPartnerName}" id="text3"/>
					                    <Text text="{BusinessPartnerCategory}" id="text4"/></cells>
					            </ColumnListItem>
					        </items>
					        <columns>
					            <Column id="column0">
					                <header>
					                    <Label text="ID" id="label0"/>
					                </header>
					            </Column>
					            <Column id="column1">
					                <header>
					                    <Label text="Name" id="label1"/>
					                </header>
					            </Column>
					            <Column id="column2">
					                <header>
					                    <Label text="Category" id="label2"/>
					                </header>
					            </Column></columns></Table>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>